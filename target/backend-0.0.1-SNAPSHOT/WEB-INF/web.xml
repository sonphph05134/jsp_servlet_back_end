<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LoginController</servlet-name>
  	<servlet-class>io.sonph.assignment.controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
		<servlet-name>LogoutController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.LogoutController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ListCategoryController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.ListCategoryController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListProductController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.ListProductController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListAccountController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.ListAccountController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CreateCategoryController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.CreateCategoryController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateProductController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.CreateProductController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateAccountController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.CreateAccountController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EditCategoryController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.EditCategoryController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditProductController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.EditProductController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditAccountController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.EditAccountController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DeleteCategoryController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.DeleteCategoryController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteProductController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.DeleteProductController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteAccountController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.DeleteAccountController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ListCategoryController</servlet-name>
		<url-pattern>/list-categories</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListProductController</servlet-name>
		<url-pattern>/list-products</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListAccountController</servlet-name>
		<url-pattern>/list-accounts</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CreateCategoryController</servlet-name>
		<url-pattern>/create-category</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateProductController</servlet-name>
		<url-pattern>/create-product</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateAccountController</servlet-name>
		<url-pattern>/create-account</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>EditCategoryController</servlet-name>
		<url-pattern>/edit-category</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditProductController</servlet-name>
		<url-pattern>/edit-product</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditAccountController</servlet-name>
		<url-pattern>/edit-account</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DeleteCategoryController</servlet-name>
		<url-pattern>/delete-category</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteProductController</servlet-name>
		<url-pattern>/delete-product</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteAccountController</servlet-name>
		<url-pattern>/delete-account</url-pattern>
	</servlet-mapping>
</web-app>
